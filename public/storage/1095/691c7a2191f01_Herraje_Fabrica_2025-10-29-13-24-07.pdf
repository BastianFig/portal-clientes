  <script>
    tailwind.config = {
      theme: { extend: { container: { center: true, padding: '1rem' } } }
    }
  </script>
</head>
<body class="bg-gray-100 text-gray-800 antialiased">
  <div class="min-h-dvh flex items-stretch">
    <div x-data="{ open: false, groupOpen: null }" class="contents">
  <aside
   x-cloak
    @toggle-sidebar.window="open = !open"
    class="bg-gradient-to-b from-blue-600 to-indigo-700 text-white
           flex-none flex flex-col py-4 shadow-lg transition-all duration-300 ease-in-out
           self-stretch"  
    :class="open ? 'w-56' : 'w-16'">

    <div class="flex justify-end px-2 mb-4">
      <button @click="$dispatch('toggle-sidebar')" class="p-2 rounded-md hover:bg-blue-700">
        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M4 6h16M4 12h16m-7 6h7" />
        </svg>
      </button>
    </div>

    <nav class="flex-1 space-y-2 px-2 text-sm font-medium overflow-y-auto">
      <a href="http://127.0.0.1:8000/dashboard" class="flex items-center gap-3 w-full px-3 py-2 rounded-md transition focus:outline-none text-white/90 hover:bg-white/10 hover:text-white">
          <svg class="h-6 w-6 text-white" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
      <path d="M11.47 3.84a.75.75 0 0 1 1.06 0l8.25 8.25a.75.75 0 1 1-1.06 1.06l-.22-.22V20a2.25 2.25 0 0 1-2.25 2.25h-3.75a.75.75 0 0 1-.75-.75v-4.5a1.5 1.5 0 0 0-1.5-1.5H9.75a1.5 1.5 0 0 0-1.5 1.5V21.5a.75.75 0 0 1-.75.75H3.75A2.25 2.25 0 0 1 1.5 20v-7.07l-.22.22a.75.75 0 1 1-1.06-1.06l8.25-8.25Z"/>
    </svg>
            <span x-show="open" x-transition.opacity
          class="leading-5 whitespace-normal break-words">
      Inicio
    </span>
  </a>
<a href="http://127.0.0.1:8000/historial" class="flex items-center gap-3 w-full px-3 py-2 rounded-md transition focus:outline-none text-white/90 hover:bg-white/10 hover:text-white" title="Historial">
          <svg class="h-6 w-6 text-white" viewBox="0 0 24 24" fill="none" stroke="currentColor" aria-hidden="true">
    <!-- círculo -->
    <circle cx="12" cy="12" r="9" stroke-width="1.8"/>
    <!-- manecillas -->
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.8" d="M12 7.5v5l3 1.5"/>
  </svg>
          <span x-show="open" x-transition.opacity
          class="leading-5 whitespace-normal break-words">
      Historial
    </span>
  </a>


      <form method="POST" action="http://127.0.0.1:8000/logout" id="logout-form">
        <input type="hidden" name="_token" value="dFMje70LKD6bTJIwXCQZo08E6f6g6mmfHLjcvm9N" autocomplete="off">        <button type="submit" class="flex items-center gap-3 w-full px-3 py-2 rounded-md transition focus:outline-none text-white/90 hover:bg-white/10 hover:text-white w-full text-left">
          <svg class="h-6 w-6 text-white" viewBox="0 0 24 24" fill="none" stroke="currentColor" aria-hidden="true">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.8"
            d="M15.75 9V5.25A2.25 2.25 0 0 0 13.5 3h-6A2.25 2.25 0 0 0 5.25 5.25v13.5A2.25 2.25 0 0 0 7.5 21h6a2.25 2.25 0 0 0 2.25-2.25V15M12 9l3-3m0 0 3 3m-3-3v12"/>
    </svg>
            <span x-show="open" x-transition.opacity
          class="leading-5 whitespace-normal break-words">
      Salir
    </span>
  </button>
      </form>
    </nav>

    <div class="mt-auto text-center text-xs text-blue-200 py-3" x-show="open">
      © 2025 Ilesa
    </div>
  </aside>

  <div x-show="open" x-transition.opacity @click="$dispatch('toggle-sidebar')"
       class="fixed inset-0 bg-black/50 md:hidden"></div>
</div>

<script>
document.addEventListener('DOMContentLoaded', () => {
  const btn = document.querySelector('#logout-form button[type="submit"]');
  if (btn) {
    btn.addEventListener('click', (e) => {
      e.preventDefault();
      document.getElementById('logout-form').submit();
    });
  }
});
</script>

    <div class="flex-1 min-w-0 flex flex-col">
      <header class="bg-white shadow sticky top-0 z-10">
        <div class="px-4 py-3 flex items-center justify-between">
          <div class="flex items-center gap-2">
            <button class="md:hidden p-2 rounded hover:bg-gray-100"
                    @click="$dispatch('toggle-sidebar')">
              <svg class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M4 6h16M4 12h16m-7 6h7"/>
              </svg>
            </button>
            <h1 class="font-semibold">Herraje Fábrica · </h1>
          </div>
          <div class="text-sm text-gray-500">
            Admin
          </div>
        </div>
      </header>

      <main class="p-4 flex-1 min-h-0 overflow-auto">
        


  
  <div
    x-data="{
      pedido: '',
      ordenCompra: '',
      proyecto: '',
      muebles: 1,

      dim: JSON.parse('{\u0022ancho\u0022:\u002240\u0022,\u0022fondo\u0022:\u002240\u0022,\u0022alto\u0022:\u002250\u0022}'),
      dimBuscadas: JSON.parse('{\u0022ancho\u0022:40,\u0022fondo\u0022:40,\u0022alto\u0022:50}'),
      encontrado: true,

      rows: JSON.parse('[{\u0022DETALLE\u0022:\u0022MINIFIX\u0022,\u0022CANTIDAD\u0022:12,\u0022ESTADO\u0022:\u0022\u0022,\u0022scale\u0022:true,\u0022tipo\u0022:\u0022base\u0022},{\u0022DETALLE\u0022:\u0022TARUGO DE MADERA\u0022,\u0022CANTIDAD\u0022:12,\u0022ESTADO\u0022:\u0022\u0022,\u0022scale\u0022:true,\u0022tipo\u0022:\u0022base\u0022},{\u0022DETALLE\u0022:\u0022PATINES\u0022,\u0022CANTIDAD\u0022:4,\u0022ESTADO\u0022:\u0022\u0022,\u0022scale\u0022:true,\u0022tipo\u0022:\u0022base\u0022},{\u0022DETALLE\u0022:\u0022INCERTO ARA\\u00f1A\u0022,\u0022CANTIDAD\u0022:4,\u0022ESTADO\u0022:\u0022\u0022,\u0022scale\u0022:true,\u0022tipo\u0022:\u0022base\u0022},{\u0022DETALLE\u0022:\u0022BISAGRA\u0022,\u0022CANTIDAD\u0022:2,\u0022ESTADO\u0022:\u0022\u0022,\u0022scale\u0022:true,\u0022tipo\u0022:\u0022base\u0022},{\u0022DETALLE\u0022:\u0022CERRADURA\u0022,\u0022CANTIDAD\u0022:1,\u0022ESTADO\u0022:\u0022\u0022,\u0022scale\u0022:true,\u0022tipo\u0022:\u0022base\u0022},{\u0022DETALLE\u0022:\u0022TIRADOR\u0022,\u0022CANTIDAD\u0022:1,\u0022ESTADO\u0022:\u0022\u0022,\u0022scale\u0022:true,\u0022tipo\u0022:\u0022base\u0022},{\u0022DETALLE\u0022:\u0022TORNILLOS DE 40MM\u0022,\u0022CANTIDAD\u0022:4,\u0022ESTADO\u0022:\u0022\u0022,\u0022scale\u0022:true,\u0022tipo\u0022:\u0022base\u0022},{\u0022DETALLE\u0022:\u0022TORNILLO 4,5 X 20\u0022,\u0022CANTIDAD\u0022:8,\u0022ESTADO\u0022:\u0022\u0022,\u0022scale\u0022:true,\u0022tipo\u0022:\u0022derivado\u0022},{\u0022DETALLE\u0022:\u0022TORNILLO 3,5 X 20\u0022,\u0022CANTIDAD\u0022:4,\u0022ESTADO\u0022:\u0022\u0022,\u0022scale\u0022:true,\u0022tipo\u0022:\u0022derivado\u0022}]'),

      addRow(){ this.rows.push({ DETALLE:'', CANTIDAD:0, ESTADO:'', scale:false }) },
      remove(i){ this.rows.splice(i,1) },

      // ===== Helpers =====
      csrf(){
        const m = document.querySelector('meta[name=csrf-token]');
        return m ? m.getAttribute('content') : 'dFMje70LKD6bTJIwXCQZo08E6f6g6mmfHLjcvm9N';
      },
      buildPayload(){
        return {
          mode: 'single',
          pedido: this.pedido || null,
          orden_compra: this.ordenCompra || null,
          proyecto: this.proyecto || null,
          muebles: Number(this.muebles)||1,
          dim: this.dim,
          dimBuscadas: this.dimBuscadas,
          encontrado: !!this.encontrado,
          rows: (this.rows||[]).map(r => ({
            DETALLE: r.DETALLE || '',
            CANTIDAD: Number(r.CANTIDAD)||0,
            ESTADO: r.ESTADO || '',
            scale: !!r.scale
          })),
        };
      },
      async save(){
        try{
          const ok = await Swal.fire({
            icon:'question', title:'¿Guardar ficha?', text:'Se guardará la ficha (single).',
            showCancelButton:true, confirmButtonText:'Sí, guardar', cancelButtonText:'Cancelar',
            confirmButtonColor:'#2563eb'
          });
          if(!ok.isConfirmed) return;

          const res = await fetch('http://127.0.0.1:8000/herrajes/gabinete/guardar', {
            method:'POST',
            headers:{
              'Content-Type':'application/json',
              'X-CSRF-TOKEN': this.csrf(),
              'Accept':'application/json',
            },
            body: JSON.stringify(this.buildPayload())
          });

          if(!res.ok){
            const err = await res.json().catch(()=>({message:'Error'}));
            throw new Error(err.message || 'Error al guardar');
          }
          const out = await res.json();
          Swal.fire({icon:'success', title:'Guardado', text: out.message || 'Ficha guardada correctamente.'});
        }catch(e){
          Swal.fire({icon:'error', title:'Error', text: e.message || 'No se pudo guardar.'});
        }
      },
      async exportPdf(){
        try{
          const res = await fetch('http://127.0.0.1:8000/herrajes/gabinete/pdf', {
            method:'POST',
            headers:{
              'Content-Type':'application/json',
              'X-CSRF-TOKEN': this.csrf(),
              'Accept':'application/pdf',
            },
            body: JSON.stringify(this.buildPayload())
          });
          if(!res.ok){
            const errTxt = await res.text();
            throw new Error('No se pudo generar el PDF: ' + errTxt);
          }
          const blob = await res.blob();
          const url = URL.createObjectURL(blob);
          const a = document.createElement('a');
          const nice = (this.proyecto || 'Herraje_Fabrica') + '_' + (new Date().toISOString().slice(0,19).replace(/[:T]/g,'-')) + '.pdf';
          a.href = url; a.download = nice;
          document.body.appendChild(a); a.click();
          a.remove(); URL.revokeObjectURL(url);
        }catch(e){
          Swal.fire({icon:'error', title:'Error', text: e.message || 'No se pudo descargar el PDF.'});
        }
      },
      async fakeExcel(){ Swal.fire({icon:'info', title:'Exportar Excel', text:'Acción simulada. Luego conectamos la ruta.'}); },
    }"
    class="bg-white rounded-xl shadow overflow-hidden"
    x-init="
      if (!encontrado) {
        Swal.fire({
          icon: 'warning',
          title: 'Gabinete no encontrado',
          html: '<p>No se encontraron herrajes para las dimensiones:</p>' +
                '<p class=\'font-bold mt-2\'>' + dim.ancho + ' × ' + dim.fondo + ' × ' + dim.alto + ' cm</p>' +
                '<p class=\'text-sm mt-2\'>(Ancho × Fondo × Alto)</p>',
          confirmButtonText: 'Entendido',
          confirmButtonColor: '#2563eb'
        });
      }
    "
  >
    <div class="bg-slate-200 px-4 py-4 flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
      <h1 class="text-xl font-semibold tracking-wide">HERRAJE FABRICA — Gabinete</h1>

      <div class="flex items-center gap-3">
        <button type="button" @click="fakeExcel()
                " class="px-4 py-2 bg-emerald-600 hover:bg-emerald-700 text-white font-medium rounded-md shadow transition">
          Exportar Excel
        </button>

        <button type="button" @click="exportPdf()"
                class="px-4 py-2 bg-red-600 hover:bg-red-700 text-white font-medium rounded-md shadow transition">
          Exportar PDF
        </button>

        <button type="button" @click="save()"
                class="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-md shadow">
          Guardar
        </button>

        <a href="#" onclick="history.back(); return false;"
           class="px-4 py-2 bg-gray-500 hover:bg-gray-600 text-white font-medium rounded-md shadow">
          Volver
        </a>
      </div>
    </div>

    
    <div class="p-4">
      <table class="w-full text-sm border border-gray-300">
        <tbody>
        <tr class="border-b border-gray-300">
          <th class="w-28 bg-gray-100 px-3 py-2 text-left font-semibold">N° PEDIDO</th>
          <td class="px-3 py-2 w-40">
            <input type="text" x-model="pedido"
                   class="w-full max-w-xs bg-transparent border border-gray-300 rounded px-2 py-1 focus:outline-none focus:ring-1 focus:ring-blue-300" />
          </td>

          <th class="w-40 bg-gray-100 px-3 py-2 text-left font-semibold">N° ORDEN DE COMPRA</th>
          <td class="px-3 py-2 w-40">
            <input type="text" x-model="ordenCompra"
                   class="w-full max-w-xs bg-transparent border border-gray-300 rounded px-2 py-1 focus:outline-none focus:ring-1 focus:ring-blue-300" />
          </td>

          <th class="w-28 bg-gray-100 px-3 py-2 text-left font-semibold">PROYECTO</th>
          <td class="px-3 py-2 w-60">
            <input type="text" x-model="proyecto"
                   class="w-full max-w-xs bg-transparent border border-gray-300 rounded px-2 py-1 focus:outline-none focus:ring-1 focus:ring-blue-300" />
          </td>

          <th class="w-20 bg-gray-100 px-3 py-2 text-left font-semibold">FECHA</th>
          <td class="px-3 py-2">29/10/2025</td>
        </tr>

        <tr class="border-b border-gray-300">
          <th class="bg-gray-100 px-3 py-2 text-left font-semibold">MEDIDA</th>
          <td class="px-3 py-2" colspan="3">
            <span class="inline-flex items-center gap-2">
              <span class="font-medium" x-text="`${dim.ancho} × ${dim.fondo} × ${dim.alto} cm`"></span>
              <span class="text-xs text-gray-500">(Ancho × Fondo × Alto)</span>
              <template x-if="dimBuscadas.ancho != dim.ancho || dimBuscadas.fondo != dim.fondo || dimBuscadas.alto != dim.alto">
                <span class="text-xs text-blue-600 bg-blue-50 px-2 py-0.5 rounded">
                  Busca: <span x-text="`${dimBuscadas.ancho}×${dimBuscadas.fondo}×${dimBuscadas.alto}`"></span>
                </span>
              </template>
            </span>
            <template x-if="!encontrado">
              <span class="ml-2 text-xs text-amber-600 font-medium">⚠️ No encontrado en BD</span>
            </template>
          </td>

          <th class="bg-gray-100 px-3 py-2 text-left font-semibold">MUEBLES</th>
          <td class="px-3 py-2">
            <input type="number" min="1" x-model.number="muebles"
                   class="w-20 text-center bg-transparent border border-gray-300 rounded-md px-2 py-1 focus:outline-none focus:ring-1 focus:ring-blue-300" />
          </td>

          <td class="px-3 py-2" colspan="2"></td>
        </tr>
        </tbody>
      </table>
    </div>

    <div class="px-4 pb-2 flex items-center gap-2">
      <button @click="addRow()" class="px-3 py-1.5 rounded-md border bg-white text-gray-700 hover:bg-blue-50 hover:border-blue-500 transition">
        + Añadir fila
      </button>
    </div>

    <div class="px-4 pb-4">
      <table class="w-full text-sm border border-gray-800">
        <thead>
        <tr class="bg-slate-200">
          <th class="px-3 py-2 text-left border border-gray-800">DETALLE</th>
          <th class="px-3 py-2 text-center border border-gray-800 w-40">CANTIDAD</th>
          <th class="px-3 py-2 text-center border border-gray-800 w-40">ESTADO</th>
          <th class="px-3 py-2 text-center border border-gray-800 w-16">—</th>
        </tr>
        </thead>
        <tbody>
        <template x-if="rows.length === 0">
          <tr>
            <td colspan="4" class="px-3 py-4 text-center text-gray-500 italic border border-gray-800">
              No se encontraron herrajes para este gabinete. Agrega filas manualmente con el botón "+ Añadir fila".
            </td>
          </tr>
        </template>
        <template x-for="(r, i) in rows" :key="i">
          <tr>
            <td class="px-3 py-2 border border-gray-800">
              <input x-model="r.DETALLE" class="w-full bg-transparent border-0 p-0 focus:outline-none focus:ring-0" />
            </td>
            <td class="px-3 py-2 text-center border border-gray-800">
              <template x-if="r.scale"><span x-text="(Number(r.CANTIDAD)||0) * (Number(muebles)||1)"></span></template>
              <template x-if="!r.scale">
                <input type="number" min="0" x-model.number="r.CANTIDAD"
                       class="w-24 text-center bg-transparent border border-gray-300 rounded px-2 py-1 focus:outline-none focus:ring-1 focus:ring-blue-300" />
              </template>
            </td>
            <td class="px-3 py-2 text-center border border-gray-800">
              <input x-model="r.ESTADO" class="w-full text-center bg-transparent border-0 p-0 focus:outline-none focus:ring-0" />
            </td>
            <td class="px-3 py-2 text-center border border-gray-800">
              <button @click="remove(i)" class="text-red-600 hover:underline">Eliminar</button>
            </td>
          </tr>
        </template>
        </tbody>
      </table>
    </div>

    
    <div class="px-4 py-10">
      <div class="max-w-md mx-auto">
        <div class="border-t border-gray-800 mt-10 pt-4 text-center">
          <p class="text-sm font-medium">RECEPCION CONFORME POR</p>
          <p class="text-xs text-gray-600">(NOMBRE Y FIRMA MAESTRO)</p>
        </div>
      </div>
    </div>

    <div class="bg-slate-200 px-4 py-3 text-xs">
      <strong>NOTA:</strong> FAVOR AVISAR POR ALGÚN CAMBIO EN LOS HERRAJES
    </div>
  </div>
      </main>
    </div>
  </div>


<script>
Swal.fire({
  icon: 'error',
  title: 'Error',
  text: "Error al generar PDF: The fecha field is required. (and 1 more error)",
  confirmButtonColor: '#d33',
  confirmButtonText: 'Cerrar'
});
</script>


  
</body>
</html>
